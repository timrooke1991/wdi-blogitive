<div class="tabs is-centered  has-shadow">
  <ul>
    <li class="">
      <a href="/posts?q=politics">
        <span class="icon is-small"><i class="fa fa-code"></i></span>
        <span>Tech</span>
      </a>
    </li>
    <li>
      <a href="/posts?q=politics">
        <span class="icon is-small"><i class="fa fa-music"></i></span>
        <span>Music</span>
      </a>
    </li>
    <li>
      <a href="/posts?q=politics">
        <span class="icon is-small"><i class="fa fa-futbol-o"></i></span>
        <span>Sport</span>
      </a>
    </li>
    <li>
      <a href="/posts?q=politics">
        <span class="icon is-small"><i class="fa fa-newspaper-o"></i></span>
        <span>Politics</span>
      </a>
    </li>
  </ul>
</div>


<div class="column is-10 is-offset-1">
  <% for (let i = 0; i < 6; i++) {  %>
      <% if((i+1) % 3 === 0) { %>
        <div class="tile is-parent">
          <div class="tile is-child">
            <h2 class="title"><a href="/posts/<%= posts[i].id %>"><%= posts[i].title %></a></h2>
            <strong><a href="/users/<%= posts[i].createdBy.id %>"><p><%= posts[i].createdBy.username %> </p></a></strong>
            <small><em class=""><%= posts[i].timeAgo %></em></small>
            <img class="image is-2by1" src="<%= posts[i].imageSRC %>" alt="<%= posts[i].caption %>">
            <p><%- posts[i].HTMLbody.substring(0, 550) %>...</p>
            <p class=""><a href="/posts/<%= posts[i].id %>">Read more</a></p>
            <div>
            <% posts[0].categories.split(',').forEach((category) => { %>
              <a href="/posts?q=<%= category %>" class="tag is-medium is-warning"><%= category %></a>
            <% }) %>
            </div>
          </div>

        </div>

        </div>
        <% } else if ((i+1) % 2 !== 0) { %>
          <% if((i+1) < 3) { %>
            <div class="tile is-12 is-ancestor">
            <div class="tile is-4 is-vertical is-parent">
          <% } %>

            <div class="tile is-child">
              <h3 class="title"><a href="/posts/<%= posts[i].id %>"><%= posts[i].title %></a></h3>
              <p><%- posts[i].HTMLbody.substring(0, 550) %>...</p>
              <p class=""><a href="/posts/<%= posts[i].id %>">Read more</a></p>
            </div>

          <% if((i+1) === posts.length || (i+1) > 3) { %>
            </div>
          <% } %>
        <% } else { %>
          <% if((i+1) > 3) { %>
            <div class="tile is-12 is-ancestor">
            <div class="tile is-4 is-vertical is-parent">
          <% } %>
            <div class="tile is-child condensed">
              <h3 class="title"><a href="/posts/<%= posts[i].id %>"><%= posts[i].title %></a></h3>
              <p><%- posts[i].HTMLbody.substring(0, 550) %>...</p>
              <p class=""><a href="/posts/<%= posts[i].id %>">Read more</a></p>
            </div>

          <% if((i+1) === posts.length || (i+1) < 3) { %>
            </div>
          <% } %>
        <% } %>
        <hr class="faint" />
    <% } %>

    <% for (let i = 6; i < posts.length; i++) {  %>
      <article class="media">
        <figure class="image">
          <img  class= "" src="<%= posts[i].imageSRC %>" alt="Image">
        </figure>
        <div class="media-content">
          <div class="content">
          <h2 class="title"><a href="/posts/<%= posts[i].id %>"><%= posts[i].title %></a></h2>
          <strong><a href="/users/<%= posts[i].createdBy.id %>"><p><%= posts[i].createdBy.username %> </p></a></strong><small>
            <em class=""><%= posts[i].timeAgo %></em></small>
          <div class="condensed">
            <p><%- posts[i].HTMLbody.substring(0, 550) %>...</p>
            <p class=""><a href="/posts/<%= posts[i].id %>">Read more</a></p>
          </div>
          </div>
        </div>
      </article>
    <% } %>
</div>
</div>
